%h4 Courses
%a.btn.btn-success{type: "button", href: new_course_path}
  %span.glyphicon.glyphicon-plus
  Add new
%table.table.table-hover
  %thead
    %tr
      %th #
      %th Name
      %th
  %tbody
    - @courses.each_with_index do |c,i|
      %tr
        %td{onclick: 'goToItem("'+course_assignments_path(c)+'");'}= i+1
        %td{onclick: 'goToItem("'+course_assignments_path(c)+'");'}= c.name
        %td
          %a.btn.btn-default{type: "button", href: edit_course_path(c)}
            %span.glyphicon.glyphicon-pencil
          =link_to c, 'data-method' => :delete, :class => "btn btn-default", type: 'button', data: {confirm: "Are you sure?"} do
            %span.glyphicon.glyphicon-remove